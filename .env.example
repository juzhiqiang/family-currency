# Family Currency 环境配置示例
# 复制此文件为 .env 并根据需要修改配置

# 服务端口配置
PORT=3001
EXPLORER_PORT=3000
EXPLORER_WS_PORT=3002

# P2P 网络配置
P2P_PORT=6001
# 连接到其他节点的地址，用逗号分隔
PEERS=
# 示例: PEERS=ws://localhost:6002,ws://192.168.1.100:6001

# 挖矿配置
MINING_DIFFICULTY=2
MINING_REWARD=100
AUTO_MINING=true
MINING_INTERVAL=10000

# 日志配置
LOG_LEVEL=info
# 可选值: error, warn, info, debug

# 数据存储配置
DATA_DIR=./data
# 如果使用持久化存储，可以配置数据库URL
# DATABASE_URL=sqlite:./data/blockchain.db
# DATABASE_URL=postgresql://user:password@localhost:5432/familycurrency

# 安全配置
# 生产环境建议设置复杂的密钥
JWT_SECRET=your-super-secret-jwt-key-here
API_KEY=your-api-key-here

# 网络配置
# 启用HTTPS（生产环境推荐）
HTTPS_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# 性能配置
# 内存缓存大小（MB）
CACHE_SIZE=100
# 最大并发连接数
MAX_CONNECTIONS=100

# 备份配置
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600000
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=./backups

# 监控配置
# Prometheus 监控端点
METRICS_ENABLED=true
METRICS_PORT=9090

# 通知配置
# Webhook URL for notifications
NOTIFICATION_WEBHOOK=
# 邮件通知配置
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
NOTIFY_EMAIL=

# 开发环境配置
NODE_ENV=development
DEBUG=family-currency:*

# 生产环境配置示例
# NODE_ENV=production
# LOG_LEVEL=warn
# HTTPS_ENABLED=true
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem